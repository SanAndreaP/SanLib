{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/SanAndreasP/SanLib/1.12/sanlib-gui-schema.json",
  "definitions": {
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "id":   { "type": "string", "default": null },
          "pos":  { "type": "array", "minItems": 2, "maxItems": 2, "items": { "type": "integer" }, "default": [0, 0] },
          "data": { "type": "object", "default": {} }
        },
        "required": ["type"]
      }
    }
  },
  "type": "object",
  "properties": {
    "width":   { "type": "integer", "minimum": 0, "default": 0 },
    "height":  { "type": "integer", "minimum": 0, "default": 0 },
    "texture": { "type": "string", "default": null },
    "parent":  { "type": "string", "default": null },
    "backgroundElements":   {
      "$ref": "#/definitions/elements"
    },
    "foregroundElements":   {
      "$ref": "#/definitions/elements"
    }
  },
  "required": ["width", "height", "backgroundElements", "foregroundElements"]
}